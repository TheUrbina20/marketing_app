
%nav.navbar.is-transparent{"aria-label" => "main navigation", :role => "navigation"}
  .navbar-menu
    .navbar-start
      = link_to image_tag("app-logo.png"), root_path, class: 'navbar-item'
    .navbar-end
      .navbar-item.has-dropdown.is-hoverable.has-double-margin-right
        -if current_user
          %a.navbar-link
            Menú
          .navbar-dropdown.is-right
            - unless controller_path.include?('landing')
              = link_to 'Inicio', root_path, class: "navbar-item"
            - if current_user.is_admin?
              = link_to 'Seccion de admin', admin_campains_path, class: "navbar-item"
            - if current_user.is_rrhh?
              = link_to 'Seccion de RRHH', rrhh_users_path, class: "navbar-item"
            - if current_user.is_finance?
              = link_to 'Seccion de finanzas', finance_companies_path, class: "navbar-item"
            - if current_user.is_community_manager?
              = link_to 'Seccion de community mannager', community_campains_path, class: "navbar-item"
            - if current_user.is_content_creator?
              = link_to 'Seccion de creador de contenido', content_creator_campains_path, class: "navbar-item"
            - if current_user.is_designer?
              = link_to 'Seccion de diseñador', designer_campains_path, class: "navbar-item"
            - if current_user.client?
              = link_to 'Seccion del cliente', consumer_root_path, class: "navbar-item"
            - if current_user.agency?
              = link_to 'Seccion de agencia', agency_root_path, class: "navbar-item"
            - if current_user.client_admin?
              = link_to 'Seccion de agencia', customer_admin_root_path, class: "navbar-item"
            %hr.navbar-divider
            = link_to 'Cerrar sesión', destroy_user_session_path, method: :delete, class: "navbar-item"

