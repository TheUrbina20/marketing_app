.column.is-two-thirds-tablet.is-one-third-desktop.is-one-quarter-fullhd
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    .form-inputs.box
      %center
        %h2
          ¿Olvidaste tu contraseña?
        %div.control.has-icons-left.has-icons-right
          %span.icon.is-small.is-left
            %i.fa.fa-envelope
          = f.error_notification
          .form-inputs
            = f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, label: 'E-mail'
          .form-actions.is-flex.is-justified-centered
            = f.button :submit, "Enviarme instrucciones", class: 'is-primary'
        = render "devise/shared/links"
