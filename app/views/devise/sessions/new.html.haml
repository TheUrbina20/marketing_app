.column.is-two-thirds-tablet.is-one-third-desktop.is-one-quarter-fullhd
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-inputs.box
      %center
        %h2
          Inicio de sesión
        %div.control.has-icons-left.has-icons-right
          %span.icon.is-small.is-left
            %i.fa.fa-envelope
          = f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email", placeholder: "ejemplo@gmail.com" }, label: 'E-mail'
        %div.control.has-icons-left.has-icons-right
          %span.icon.is-small.is-left
            %i.fa.fa-lock
          = f.input :password, required: false, input_html: { autocomplete: "current-password", placeholder: "********" }, label: 'Contraseña'
        .form-actions.is-flex.is-justified-centered
          = f.button :submit, "Iniciar sesión", class: 'is-primary'
        = render "devise/shared/links", class: 'is-flex is-justified-centered'
